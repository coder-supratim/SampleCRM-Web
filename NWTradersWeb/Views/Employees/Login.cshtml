@using NWTradersWeb.Models;

@model Employee
@{

    ViewBag.Title = "North Wind Traders Employee Login.";
    SelectList allSalesPersonnel = new SelectList(NWTradersUtilities.AllSalesPersonnel());

    string employeeLastName = ViewBag.employeeLastName as string;
    string employeeIDMessage = ViewBag.employeeIDMessage as string;

    string CompanyName = ViewBag.CompanyName as string;

}


<div class="container alert-light p-2">
    <hr />
</div>

<table class="container" style="width:80%">

    <tr class="">
        <td class="">
            <div class="text-center h2">
                Welcome to North Wind Traders.
            </div>
        </td>

        <td class="container shadow rounded-lg" style="width:50%">

            <!-- Begin Login Form -->
            @using (Html.BeginForm())
            {


                <div class="card-header shadow text-center py-4" style="background-color: palegoldenrod">
                    <h4> Please Enter your Last Name and password to continue.</h4>
                </div>

                <!--Card content-->
                <div class="card-body align-items-center border ">
                    <br />
                    <!-- User Name-->
                    <div class="input-group-sm">

                        @Html.DropDownList("employeeLastName", allSalesPersonnel as SelectList,
                                new
                                     {
                                    @class = "custom-select",
                                    @type = "submit",
                                    onchange = "this.form.submit();"
                                })
                    </div>

                    <br />
                    <!-- Password -->
                    <div class="form-group ">
                        @Html.LabelFor(model => model.EmployeeID, htmlAttributes: new { @class = "control-label " })


                        @Html.PasswordFor(model => model.EmployeeID,
                       new { @class = "form-control ", @style = "font-size: small", placeholder = "Enter Password (Employee ID)" })



                    </div>


                </div>

                <!-- Login or Cancel -->
                <div class="card-footer text-center">
                    <input type="submit" value="Login"
                           class="btn btn-light btn-outline-secondary" />

                    <input type="submit" value="Logout"
                           class="btn btn-light btn-outline-secondary" />

                </div>

            }
        </td>

    </tr>
</table>

<div class="container alert-light p-2">
    <hr />
</div>




